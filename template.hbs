<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RSS by email</title>
    <style type="text/css">
      @import url(https://fonts.googleapis.com/css?family=Lato:400,700);
    </style>
  </head>
  <body
    style="width;100% !important; line-height: 1.4; box-sizing: border-box;font-family: 'Lato', 'Helvetica Neue', helvetica, sans-serif;font-size:16px;"
  >
    <ul
      style="max-width:460px;border-radius: 10px; padding: 4px;font-family: 'Lato', 'Helvetica Neue', helvetica, sans-serif;list-style:none;margin:10px;padding:0;"
    >
      {{#each items}}
        <li style="margin:0;padding: 0;">
          <h3 style="font-size:20px;font-weight:700;margin-bottom:8px;"><a
              style="text-decoration: none;color:rgb(156, 61, 27);"
              href="{{url}}"
            >{{title}}</a></h3>
          <ul style="list-style: none;margin: 0;padding: 0;">
            {{#each entries}}
              <li
                style="font-size:14px;margin-bottom:4px;display:flex;margin-bottom:6px;padding:0;"
              >
                <a
                  href="{{url}}"
                  style="font-weight:600;color: rgb(241, 82, 24);text-decoration:none;"
                ><span style="padding-right:10px;">â€¢</span> {{title}}</a>
              </li>
            {{/each}}
          </ul>
        </li>
      {{/each}}
    </ul>
  </body>
</html>